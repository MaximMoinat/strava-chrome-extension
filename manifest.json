{
  "manifest_version": 2,

  "name": "Strava Perf Table Extension",
  "version": "0.1.0",
  "description": "Show a condensed Strava performance table",

  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://www.strava.com/activities/*"]
  }],
  
  "permissions": [
      "tabs",
      "https://www.strava.com/*"
  ]

}
